<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_height="fill_parent"
        android:layout_width="fill_parent"

              >
   <ScrollView android:id="@+id/scrollView1"
	android:fillViewport="true"
	 android:layout_width="match_parent" android:layout_height="wrap_content">
<TableLayout
        android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="2">

    <TableRow>

        <ImageView
                    android:id="@+id/default1"
                    android:src="@drawable/default1"
                    android:layout_height="100px"
                    android:layout_width="80px"
                      android:layout_column="1"

                      android:layout_gravity="left"
                      android:padding="3dip" />



                <TextView

                       android:layout_gravity="center"

           android:layout_column="1"
            android:text="Restore"
            android:padding="3dip"

                                   />
        <CheckBox
                      android:id="@+id/checkdefault"
                      android:layout_column="1"

                      android:layout_gravity="center"
                        android:gravity="right"

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                   </CheckBox>

    </TableRow>

    <View
         android:layout_height="2dip"
          android:background="#FF909090" />

    <TableRow>
        <ImageView
                   android:id="@+id/dronix04"
                   android:src="@drawable/dronix04"
                  android:layout_height="100px"
           android:layout_width="80px"
                              android:layout_column="1"
                              android:gravity="left"
                              android:padding="3dip" />

          <TextView
                  android:layout_gravity="center"

             android:layout_column="1"
              android:text="Dronix 0.4"
              android:padding="3dip"

                                     />


        <CheckBox         android:id="@+id/checkdronix"
                                   android:layout_column="1"
                                  android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                                   android:layout_height="wrap_content">
                                </CheckBox>

      </TableRow>

      <View
           android:layout_height="2dip"
            android:background="#FF909090" />

     <TableRow>
         <ImageView
                    android:id="@+id/ginger"
                    android:src="@drawable/ginger"

                   android:layout_height="100px"
           android:layout_width="80px"

                               android:layout_column="1"
                               android:layout_gravity="left"
                               android:padding="3dip" />




                <TextView
                android:layout_gravity="center"

           android:layout_column="1"
            android:text="Ginger"
            android:padding="3dip"

                                   />

         <CheckBox     android:id="@+id/checkginger"
                      android:layout_column="1"
                      android:layout_gravity="center"
                      android:gravity="right"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                   </CheckBox>

    </TableRow>

    <View
         android:layout_height="2dip"
          android:background="#FF909090" />
     <TableRow>
         <ImageView
            android:id="@+id/sense"
            android:src="@drawable/sense"
            android:layout_height="100px"
            android:layout_width="80px"
                       android:layout_column="1"
                       android:layout_gravity="left"
                       android:padding="3dip" />

                <TextView
                android:layout_gravity="center"

           android:layout_column="2"
            android:text="Sense"
            android:padding="3dip"

                                   />


         <CheckBox
                               android:id="@+id/checksense"
                               android:layout_column="1"
                               android:layout_gravity="center"
                               android:gravity="right"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                            </CheckBox>


    </TableRow>

    <View
         android:layout_height="2dip"
          android:background="#FF909090" />
     <TableRow
             >
                <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                           android:gravity="right"
           android:layout_column="2"
            android:text="Custom"
            android:padding="3dip"

                                   />

         <CheckBox
                              android:id="@+id/checkcustom"
                              android:layout_column="1"

                              android:layout_gravity="right"

                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">
                           </CheckBox>


    </TableRow>

    <View
         android:layout_height="2dip"
          android:background="#FF909090" />

        </TableLayout>
    </ScrollView>
</LinearLayout>
